/* pages/home/home.wxss */
/* 响应式适配：支持iPad、各种手机型号，满屏显示 */

.home-screen {
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  box-sizing: border-box;
  /* iPad居中显示 */
  margin: 0 auto;
  max-width: 100vw;
}

/* 标题区 - 响应式尺寸 */
.header-section {
  flex-shrink: 0;
  text-align: center;
  padding: 36rpx 32rpx 24rpx;
}

.logo-area {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.stars-left, .stars-right {
  font-size: 44rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 900;
  color: white;
  text-shadow: 0 6rpx 0 rgba(0,0,0,0.15), 0 10rpx 36rpx rgba(0, 0, 0, 0.25);
  letter-spacing: 5rpx;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* 用户信息栏 - 响应式布局 */
.user-info-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-top: 20rpx;
  padding: 14rpx 28rpx;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20rpx);
  border-radius: 36rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.4);
}

.user-avatar {
  font-size: 36rpx;
}

.user-name {
  font-size: 26rpx;
  font-weight: 700;
  color: white;
  max-width: 140rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-stats {
  display: flex;
  gap: 12rpx;
  margin-left: 10rpx;
}

.stat-item {
  font-size: 24rpx;
  font-weight: 700;
  color: white;
  background: rgba(0, 0, 0, 0.2);
  padding: 6rpx 14rpx;
  border-radius: 20rpx;
}

/* 主卡片 - 响应式宽度 */
.main-card {
  flex: 1;
  max-width: 100%;
  width: 100%;
  margin: 0 auto;
  overflow: hidden;
}

.section-title {
  font-size: 34rpx;
  font-weight: 800;
  color: #5b21b6;
  margin-bottom: 24rpx;
  text-align: center;
  display: block;
}

/* 模式选择 - 响应式网格 */
.mode-selection {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.mode-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.mode-btn {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 20rpx;
  border-radius: 32rpx;
  position: relative;
  overflow: hidden;
}

.mode-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 40%;
  background: linear-gradient(180deg, rgba(255,255,255,0.3), transparent);
  border-radius: 36rpx 36rpx 0 0;
  pointer-events: none;
}

.mode-btn.campaign {
  background: linear-gradient(180deg, #c4b5fd, #8b5cf6);
  color: white;
  box-shadow: 0 8rpx 0 rgba(139, 92, 246, 0.5);
}

.mode-btn.endless {
  background: linear-gradient(180deg, #6ee7b7, #10b981);
  color: white;
  box-shadow: 0 8rpx 0 rgba(16, 185, 129, 0.5);
}

.mode-btn.timed {
  background: linear-gradient(180deg, #f9a8d4, #ec4899);
  color: white;
  box-shadow: 0 8rpx 0 rgba(236, 72, 153, 0.5);
}

.mode-btn.pk {
  background: linear-gradient(180deg, #fdba74, #f97316);
  color: white;
  box-shadow: 0 8rpx 0 rgba(249, 115, 22, 0.5);
}

.mode-icon {
  font-size: 44rpx;
}

.mode-info {
  flex: 1;
}

.mode-name {
  font-size: 30rpx;
  font-weight: 800;
  display: block;
}

.mode-desc {
  font-size: 22rpx;
  opacity: 0.9;
  font-weight: 600;
  display: block;
  margin-top: 4rpx;
}

/* 快捷入口 */
.quick-links {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 32rpx;
}

.link-card {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 28rpx 36rpx;
  border-radius: 32rpx;
}

.link-card.leaderboard {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  color: #92400e;
  box-shadow: 0 8rpx 0 #d97706;
  border: 4rpx solid #fbbf24;
}

.link-card.settings {
  background: linear-gradient(135deg, #e0e7ff, #c7d2fe);
  color: #4338ca;
  box-shadow: 0 6rpx 0 #6366f1;
  border: 4rpx solid #818cf8;
}

.link-icon {
  font-size: 40rpx;
}

.link-text {
  flex: 1;
  font-size: 32rpx;
  font-weight: 800;
}

.link-arrow {
  font-size: 40rpx;
  font-weight: 700;
}

/* 选择头部 */
.selection-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.selection-header .section-title {
  margin: 0;
  flex: 1;
  text-align: left;
}

.back-btn {
  padding: 16rpx 28rpx;
  background: linear-gradient(180deg, #f3f4f6, #e5e7eb);
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #6b7280;
  box-shadow: 0 6rpx 0 #d1d5db;
}

/* 时间选择 */
.duration-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.duration-btn {
  display: flex;
  align-items: center;
  gap: 28rpx;
  padding: 36rpx 40rpx;
  border-radius: 32rpx;
  background: linear-gradient(180deg, #fce7f3, #fbcfe8);
  color: #9d174d;
  box-shadow: 0 8rpx 0 #ec4899;
  position: relative;
  overflow: hidden;
}

.duration-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 40%;
  background: linear-gradient(180deg, rgba(255,255,255,0.3), transparent);
  border-radius: 32rpx 32rpx 0 0;
  pointer-events: none;
}

.duration-btn.active {
  background: linear-gradient(180deg, #f472b6, #ec4899);
  color: white;
  box-shadow: 0 8rpx 0 #be185d;
}

.duration-icon {
  font-size: 48rpx;
}

.duration-label {
  font-size: 36rpx;
  font-weight: 800;
}

/* 难度选择 */
.difficulty-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.difficulty-btn {
  display: flex;
  align-items: center;
  gap: 28rpx;
  padding: 32rpx 36rpx;
  border-radius: 32rpx;
  position: relative;
  overflow: hidden;
}

.difficulty-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 40%;
  background: linear-gradient(180deg, rgba(255,255,255,0.3), transparent);
  border-radius: 32rpx 32rpx 0 0;
  pointer-events: none;
}

.difficulty-btn.low {
  background: linear-gradient(180deg, #a7f3d0, #6ee7b7);
  color: #065f46;
  box-shadow: 0 8rpx 0 #10b981;
}

.difficulty-btn.medium {
  background: linear-gradient(180deg, #fde68a, #fbbf24);
  color: #92400e;
  box-shadow: 0 8rpx 0 #d97706;
}

.difficulty-btn.high {
  background: linear-gradient(180deg, #fca5a5, #f87171);
  color: #7f1d1d;
  box-shadow: 0 8rpx 0 #dc2626;
}

.diff-icon {
  font-size: 48rpx;
}

.diff-info {
  flex: 1;
}

.diff-name {
  font-size: 34rpx;
  font-weight: 800;
  display: block;
}

.diff-desc {
  font-size: 26rpx;
  opacity: 0.8;
  font-weight: 600;
  display: block;
  margin-top: 4rpx;
}

/* 提示框 */
.hint-box {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-top: 32rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
  border-radius: 24rpx;
  border: 4rpx solid #7dd3fc;
}

.hint-icon {
  font-size: 36rpx;
}

.hint-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #0369a1;
}

/* 已选横幅 */
.selected-banner {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 28rpx;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
}

.duration-banner {
  background: linear-gradient(135deg, #fdf2f8, #fce7f3);
  border: 4rpx solid #f9a8d4;
}

.difficulty-banner {
  background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
  border: 4rpx solid #7dd3fc;
}

.banner-label {
  font-size: 28rpx;
  color: #6b7280;
  font-weight: 600;
}

.banner-value {
  font-size: 28rpx;
  font-weight: 800;
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
}

.banner-value.low {
  background: linear-gradient(180deg, #a7f3d0, #6ee7b7);
  color: #065f46;
}

.banner-value.medium {
  background: linear-gradient(180deg, #fde68a, #fbbf24);
  color: #92400e;
}

.banner-value.high {
  background: linear-gradient(180deg, #fca5a5, #f87171);
  color: #7f1d1d;
}

/* 词库选择 - 响应式网格 */
.group-scroll {
  flex: 1;
  max-height: 550rpx;
}

.group-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.group-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 24rpx 14rpx;
  background: linear-gradient(180deg, #ffffff, #f1f5f9);
  border: 5rpx solid #e2e8f0;
  border-radius: 28rpx;
  box-shadow: 0 6rpx 0 #cbd5e1;
  position: relative;
}

.group-icon {
  font-size: 36rpx;
}

.group-name {
  font-size: 22rpx;
  font-weight: 700;
  color: #4b5563;
  text-align: center;
}

.group-arrow {
  position: absolute;
  right: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  font-weight: 700;
  color: #a78bfa;
}

.subgroup-grid .group-btn.all-btn {
  background: linear-gradient(180deg, #fef3c7, #fde68a);
  border-color: #fbbf24;
  box-shadow: 0 8rpx 0 #d97706;
}

.subgroup-grid .group-btn.all-btn .group-name {
  color: #92400e;
  font-weight: 800;
}

/* 关卡选择 */
.level-info-banner {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 32rpx;
  background: linear-gradient(135deg, #ede9fe, #ddd6fe);
  border-radius: 24rpx;
  margin-bottom: 28rpx;
  border: 4rpx solid #a78bfa;
}

.banner-icon {
  font-size: 36rpx;
}

.banner-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #5b21b6;
  flex: 1;
}

.banner-progress {
  font-size: 26rpx;
  font-weight: 600;
  color: #059669;
  background: #d1fae5;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

/* 关卡主区域 */
.level-main-area {
  display: flex;
  align-items: stretch;
  gap: 12rpx;
}

.page-nav-btn {
  width: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(180deg, #f3f4f6, #e5e7eb);
  border: 4rpx solid #d1d5db;
  border-radius: 20rpx;
  font-size: 40rpx;
  font-weight: 700;
  color: #6b7280;
  box-shadow: 0 4rpx 0 #9ca3af;
}

.page-nav-btn.disabled {
  opacity: 0.4;
}

/* 关卡滚动区 - 响应式高度 */
.level-scroll {
  flex: 1;
  max-height: 460rpx;
  padding: 4rpx 6rpx 4rpx 4rpx;
}

.level-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 14rpx;
}

.level-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 2rpx;
  padding: 10rpx 4rpx;
  background: linear-gradient(180deg, #ffffff, #f1f5f9);
  border: 4rpx solid #e2e8f0;
  border-radius: 18rpx;
  box-shadow: 0 4rpx 0 #cbd5e1;
  min-height: 90rpx;
}

.level-btn.completed {
  background: linear-gradient(180deg, #d1fae5, #a7f3d0);
  border-color: #34d399;
  box-shadow: 0 8rpx 0 #10b981;
}

.level-btn.current {
  background: linear-gradient(180deg, #fef3c7, #fde68a);
  border-color: #fbbf24;
  box-shadow: 0 8rpx 0 #d97706;
}

.level-btn.locked {
  background: linear-gradient(180deg, #e5e7eb, #d1d5db);
  border-color: #9ca3af;
  box-shadow: 0 8rpx 0 #6b7280;
  opacity: 0.7;
}

.level-number {
  font-size: 32rpx;
  font-weight: 900;
  color: #4b5563;
}

.level-btn.completed .level-number {
  color: #065f46;
}

.level-btn.current .level-number {
  color: #92400e;
}

.level-btn.locked .level-number {
  color: #6b7280;
}

.level-stars {
  font-size: 20rpx;
  min-height: 28rpx;
}

.level-status {
  font-size: 20rpx;
  font-weight: 700;
  color: #6b7280;
}

.level-btn.completed .level-status {
  color: #047857;
}

.level-btn.current .level-status {
  color: #b45309;
}

/* 分页器 */
.range-pagination {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 16rpx;
  padding: 12rpx 20rpx;
  background: #f9fafb;
  border-radius: 20rpx;
  flex-wrap: wrap;
  justify-content: center;
}

.range-label {
  font-size: 24rpx;
  font-weight: 700;
  color: #5b21b6;
  background: linear-gradient(180deg, #ede9fe, #ddd6fe);
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

.range-buttons {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-wrap: wrap;
  justify-content: center;
}

.range-btn {
  padding: 8rpx 16rpx;
  background: linear-gradient(180deg, #ffffff, #f3f4f6);
  border: 3rpx solid #d1d5db;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #6b7280;
}

.range-btn.active {
  background: linear-gradient(180deg, #a78bfa, #8b5cf6);
  border-color: #7c3aed;
  color: white;
}

/* 底部装饰 */
.footer-decoration {
  flex-shrink: 0;
  text-align: center;
  padding: 24rpx 0;
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.footer-icon {
  font-size: 40rpx;
}
