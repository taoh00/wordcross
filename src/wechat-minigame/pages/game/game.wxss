/* pages/game/game.wxss */
/* 响应式适配：支持iPad、各种手机型号，满屏显示 */

.game-screen {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 16rpx;
  padding-bottom: 0;
  box-sizing: border-box;
  overflow: hidden;
  /* iPad居中显示 */
  margin: 0 auto;
  max-width: 100vw;
}

/* 顶部栏 - 响应式宽度 */
.top-bar {
  flex-shrink: 0;
  width: 100%;
  max-width: 100%;
  margin: 0 auto 12rpx;
}

.game-card-compact {
  padding: 10rpx 16rpx;
  background: rgba(255, 255, 255, 0.65);
  backdrop-filter: blur(24rpx);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
}

.top-row-1 {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding-bottom: 8rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
  margin-bottom: 8rpx;
}

.top-row-2 {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: nowrap;
}

.back-btn-icon {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(180deg, #f3f4f6, #e5e7eb);
  border: 4rpx solid #d1d5db;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #6b7280;
  box-shadow: 0 4rpx 0 #9ca3af;
}

.user-info-mini {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.mini-avatar {
  font-size: 36rpx;
}

.mini-name {
  font-size: 24rpx;
  font-weight: 700;
  color: #374151;
  max-width: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.mini-stats {
  display: flex;
  gap: 8rpx;
  margin-left: auto;
}

.mini-stat {
  font-size: 22rpx;
  font-weight: 700;
  color: #4b5563;
  background: linear-gradient(180deg, #f9fafb, #f3f4f6);
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e5e7eb;
}

.game-mode-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-weight: 800;
  color: #5b21b6;
  background: linear-gradient(180deg, #ede9fe, #ddd6fe);
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  border: 2rpx solid #c4b5fd;
}

.level-badge {
  background: linear-gradient(180deg, #fef3c7, #fde68a);
  color: #92400e;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  border: 2rpx solid #fbbf24;
  margin-left: 4rpx;
}

.timer-mini {
  font-size: 26rpx;
  font-weight: 800;
  color: #374151;
  background: linear-gradient(180deg, #f9fafb, #f3f4f6);
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e5e7eb;
}

.timer-mini.warning {
  color: #dc2626;
  background: linear-gradient(180deg, #fee2e2, #fecaca);
  border-color: #f87171;
}

.score-mini {
  font-size: 26rpx;
  font-weight: 800;
  color: #d97706;
  background: linear-gradient(180deg, #fef3c7, #fde68a);
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  border: 2rpx solid #fbbf24;
}

.progress-mini {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.session-score-mini {
  font-size: 24rpx;
  font-weight: 800;
  color: #059669;
  background: linear-gradient(180deg, #d1fae5, #a7f3d0);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 2rpx solid #34d399;
}

.progress-bar-mini {
  flex: 1;
  height: 12rpx;
  background: #e5e7eb;
  border-radius: 6rpx;
  overflow: hidden;
  min-width: 60rpx;
}

.progress-fill-mini {
  height: 100%;
  background: linear-gradient(90deg, #34d399, #10b981);
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

.progress-text-mini {
  font-size: 22rpx;
  font-weight: 700;
  color: #6b7280;
}

/* 主内容区域 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  overflow: hidden;
  min-height: 0;
}

.game-card-main {
  padding: 28rpx;
  background: rgba(255, 255, 255, 0.55);
  backdrop-filter: blur(30rpx);
  border-radius: 48rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.grid-container {
  display: flex;
  justify-content: center;
}

.grid {
  display: grid;
  gap: 8rpx;
}

.grid-row {
  display: contents;
}

/* 网格格子 - 响应式尺寸，自适应屏幕宽度 */
/* 使用calc确保在不同屏幕尺寸下都能正确显示 */
.letter-cell {
  /* 基础尺寸：根据屏幕宽度自适应 */
  /* 10x10网格时：(屏幕宽度 - 边距 - 间隙) / 10 */
  width: calc((100vw - 80rpx) / 10 - 8rpx);
  height: calc((100vw - 80rpx) / 10 - 8rpx);
  min-width: 56rpx;
  min-height: 56rpx;
  max-width: 80rpx;
  max-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(180deg, #ffffff, #f1f5f9);
  border: 5rpx solid #c7d2fe;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 0 #a5b4fc, inset 0 3rpx 0 rgba(255,255,255,0.8);
  position: relative;
}

.letter-cell.empty {
  background: rgba(241, 245, 249, 0.2);
  border-color: transparent;
  box-shadow: none;
}

.letter-cell.active {
  border-color: #8b5cf6;
  background: linear-gradient(180deg, #ede9fe, #ddd6fe);
  box-shadow: 0 8rpx 0 #7c3aed, 0 0 0 6rpx rgba(139, 92, 246, 0.3);
  transform: translateY(-4rpx);
}

.letter-cell.in-word {
  border-color: #a5b4fc;
  background: linear-gradient(180deg, #f5f3ff, #ede9fe);
}

.letter-cell.prefilled {
  background: linear-gradient(180deg, #fef3c7, #fde68a);
  border-color: #f59e0b;
  box-shadow: 0 8rpx 0 #d97706, inset 0 4rpx 0 rgba(255,255,255,0.6);
}

.letter-cell.locked {
  background: linear-gradient(180deg, #6ee7b7, #34d399);
  border-color: #10b981;
  box-shadow: 0 8rpx 0 #059669, inset 0 4rpx 0 rgba(255,255,255,0.4);
}

.clue-number {
  position: absolute;
  top: 2rpx;
  left: 6rpx;
  font-size: 18rpx;
  font-weight: 700;
  color: #6b7280;
}

.cell-letter {
  font-size: 36rpx;
  font-weight: 900;
  color: #4c1d95;
  text-transform: uppercase;
}

.letter-cell.prefilled .cell-letter {
  color: #92400e;
}

.letter-cell.locked .cell-letter {
  color: white;
}

/* 单词列表 - 响应式宽度，自适应剩余空间 */
.words-section {
  width: 100%;
  max-width: 100%;
  flex: 1;
  min-height: 0;
  background: rgba(255, 255, 255, 0.55);
  backdrop-filter: blur(24rpx);
  border-radius: 28rpx;
  padding: 12rpx 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  margin-bottom: 6rpx;
  overflow: hidden;
}

.words-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.word-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 20rpx;
  background: rgba(248, 250, 252, 0.7);
  border-radius: 20rpx;
  border: 2rpx solid rgba(203, 213, 225, 0.6);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.word-item.selected {
  background: rgba(219, 234, 254, 0.8);
  border-color: rgba(96, 165, 250, 0.7);
}

.word-item.completed {
  background: rgba(209, 250, 229, 0.75);
  border-color: rgba(52, 211, 153, 0.6);
}

.word-index {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(180deg, #e0e7ff, #c7d2fe);
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 800;
  color: #4338ca;
  border: 4rpx solid #a5b4fc;
}

.word-item.completed .word-index {
  background: linear-gradient(180deg, #a7f3d0, #6ee7b7);
  border-color: #34d399;
  color: #065f46;
}

.word-direction-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  background: linear-gradient(180deg, #fef3c7, #fde68a);
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 800;
  color: #92400e;
  border: 2rpx solid #fbbf24;
}

.word-text {
  font-weight: 800;
  color: #065f46;
  text-transform: uppercase;
  min-width: 120rpx;
}

.word-definition {
  flex: 1;
  color: #047857;
  font-size: 26rpx;
  font-weight: 600;
}

.word-placeholder {
  display: flex;
  gap: 6rpx;
  min-width: 120rpx;
}

.placeholder-char {
  color: #94a3b8;
  font-weight: 800;
  font-size: 28rpx;
  min-width: 24rpx;
  text-align: center;
}

.placeholder-char.hint-letter {
  color: #7c3aed;
  background: linear-gradient(180deg, #fef3c7, #fde68a);
  border-radius: 8rpx;
  padding: 2rpx 6rpx;
}

.word-translation-hint {
  flex: 1;
  color: #dc2626;
  font-size: 26rpx;
  font-weight: 700;
}

.speak-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(180deg, #fef3c7, #fde68a);
  border: 4rpx solid #fbbf24;
  border-radius: 50%;
  font-size: 28rpx;
  box-shadow: 0 4rpx 0 #d97706;
}

/* 键盘区 - 满屏宽度，固定底部 */
.keyboard-section {
  flex-shrink: 0;
  width: 100%;
  background: rgba(255, 255, 255, 0.70);
  backdrop-filter: blur(30rpx);
  padding: 12rpx 12rpx;
  padding-bottom: calc(12rpx + env(safe-area-inset-bottom));
  border-top: 2rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.keyboard-container {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
}

.keyboard-row {
  display: flex;
  justify-content: stretch;
  gap: 8rpx;
  width: 100%;
}

/* 键盘按键 - 响应式高度，满屏宽度分配 */
.keyboard-key {
  flex: 1;
  /* 响应式高度：根据屏幕高度自适应 */
  height: calc(6vh + 40rpx);
  min-height: 80rpx;
  max-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 800;
  background: linear-gradient(180deg, #ffffff, #e2e8f0);
  border: 3rpx solid #cbd5e1;
  border-radius: 14rpx;
  box-shadow: 0 5rpx 0 #94a3b8;
  color: #374151;
}

.keyboard-key.key-highlight {
  background: linear-gradient(180deg, #fef3c7, #fde68a);
  border-color: #fbbf24;
  color: #92400e;
  box-shadow: 0 8rpx 0 #d97706;
}

.keyboard-key.delete-key {
  background: linear-gradient(180deg, #fecaca, #f87171);
  border-color: #ef4444;
  color: white;
  box-shadow: 0 6rpx 0 #b91c1c;
  font-size: 36rpx;
}

/* 道具按钮 - 响应式尺寸 */
.keyboard-prop-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  flex: 1.5;
  height: calc(6vh + 40rpx);
  min-height: 80rpx;
  max-height: 100rpx;
  background: linear-gradient(180deg, #fef3c7, #fde68a);
  border: 3rpx solid #fbbf24;
  border-radius: 14rpx;
  box-shadow: 0 5rpx 0 #d97706;
}

.keyboard-prop-btn.active {
  background: linear-gradient(180deg, #a7f3d0, #6ee7b7);
  border-color: #10b981;
  box-shadow: 0 6rpx 0 #059669;
}

.prop-emoji {
  font-size: 32rpx;
}

.prop-num {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 40rpx;
  height: 40rpx;
  background: linear-gradient(180deg, #f59e0b, #d97706);
  border-radius: 50%;
  font-size: 22rpx;
  font-weight: 800;
  color: white;
}

.keyboard-prop-btn.active .prop-num {
  background: linear-gradient(180deg, #10b981, #059669);
}

/* 遮罩层 */
.overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* 加载中 */
.loading-card {
  background: white;
  border-radius: 40rpx;
  padding: 48rpx;
  text-align: center;
  box-shadow: 0 20rpx 0 rgba(0, 0, 0, 0.1);
}

.loading-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 16rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* 通关弹窗 */
.complete-modal {
  background: white;
  border-radius: 56rpx;
  padding: 48rpx;
  width: 85%;
  max-width: 600rpx;
  text-align: center;
  box-shadow: 0 24rpx 0 rgba(0, 0, 0, 0.1), 0 50rpx 120rpx rgba(0, 0, 0, 0.25);
  border: 8rpx solid #fbbf24;
}

.trophy-area {
  margin-bottom: 32rpx;
}

.trophy-emoji {
  font-size: 128rpx;
  display: block;
}

.stars-row {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.star {
  font-size: 48rpx;
  opacity: 0.3;
  filter: grayscale(100%);
}

.star.earned {
  opacity: 1;
  filter: none;
}

.star.big {
  font-size: 64rpx;
}

.stars-hint {
  font-size: 26rpx;
  color: #f59e0b;
  font-weight: 700;
  margin-top: 8rpx;
}

.timed-result {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 8rpx;
  margin-top: 16rpx;
}

.timed-count {
  font-size: 72rpx;
  font-weight: 900;
  color: #5b21b6;
}

.timed-label {
  font-size: 32rpx;
  font-weight: 700;
  color: #6b7280;
}

.complete-title {
  font-size: 40rpx;
  font-weight: 900;
  color: #5b21b6;
  margin-bottom: 24rpx;
  display: block;
}

.stats-inline {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 32rpx;
  padding: 12rpx 24rpx;
  background: #f3f4f6;
  border-radius: 40rpx;
  display: inline-block;
}

/* 奖励展示 */
.reward-display {
  background: linear-gradient(180deg, #fef3c7, #fde68a);
  border: 4rpx solid #fbbf24;
  border-radius: 28rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 32rpx;
}

.reward-title {
  font-size: 28rpx;
  font-weight: 800;
  color: #92400e;
  text-align: center;
  margin-bottom: 20rpx;
  display: block;
}

.reward-items {
  display: flex;
  justify-content: center;
  gap: 32rpx;
}

.reward-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 16rpx 28rpx;
  background: white;
  border-radius: 20rpx;
  border: 4rpx solid #f59e0b;
  box-shadow: 0 4rpx 0 #d97706;
}

.reward-icon {
  font-size: 48rpx;
}

.reward-value {
  font-size: 32rpx;
  font-weight: 900;
  color: #059669;
}

.reward-name {
  font-size: 22rpx;
  color: #92400e;
  font-weight: 600;
}

/* 弹窗按钮 */
.modal-btns {
  display: flex;
  justify-content: center;
  gap: 16rpx;
}

.modal-btn {
  padding: 24rpx 32rpx;
  border-radius: 28rpx;
  font-size: 28rpx;
  font-weight: 800;
}

.modal-btn.secondary {
  background: linear-gradient(180deg, #f3f4f6, #e5e7eb);
  color: #6b7280;
  box-shadow: 0 8rpx 0 #d1d5db;
  border: 4rpx solid #d1d5db;
}

.modal-btn.primary {
  background: linear-gradient(180deg, #a78bfa, #8b5cf6);
  color: white;
  box-shadow: 0 8rpx 0 #6d28d9;
  border: 4rpx solid #7c3aed;
}

.modal-btn.success {
  background: linear-gradient(180deg, #34d399, #10b981);
  color: white;
  box-shadow: 0 8rpx 0 #059669;
  border: 4rpx solid #10b981;
}

.modal-btn.reward {
  background: linear-gradient(180deg, #fef3c7, #fde68a);
  color: #92400e;
  box-shadow: 0 8rpx 0 #d97706;
  border: 4rpx solid #fbbf24;
}

.modal-btn.claimed {
  opacity: 0.6;
}

/* 体力不足弹窗 */
.energy-modal {
  background: white;
  border-radius: 48rpx;
  padding: 48rpx;
  width: 85%;
  max-width: 560rpx;
  text-align: center;
  box-shadow: 0 24rpx 0 rgba(0, 0, 0, 0.1), 0 50rpx 120rpx rgba(0, 0, 0, 0.25);
  border: 8rpx solid #fbbf24;
}

.energy-modal-icon {
  font-size: 128rpx;
  display: block;
  margin-bottom: 24rpx;
}

.energy-modal-title {
  font-size: 40rpx;
  font-weight: 900;
  color: #dc2626;
  margin-bottom: 20rpx;
  display: block;
}

.energy-modal-text {
  font-size: 28rpx;
  color: #4b5563;
  margin-bottom: 32rpx;
  display: block;
}

.energy-modal-info {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  margin-bottom: 24rpx;
}

.energy-current, .energy-need {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 700;
}

.energy-current {
  background: linear-gradient(180deg, #fee2e2, #fecaca);
  color: #dc2626;
  border: 4rpx solid #f87171;
}

.energy-need {
  background: linear-gradient(180deg, #dbeafe, #bfdbfe);
  color: #1e40af;
  border: 4rpx solid #60a5fa;
}

.energy-modal-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: 40rpx;
}

.energy-modal-btn {
  width: 100%;
  padding: 28rpx 48rpx;
  border-radius: 28rpx;
  font-size: 32rpx;
  font-weight: 800;
  color: white;
}

.energy-modal-btn.claim {
  background: linear-gradient(180deg, #34d399, #10b981);
  box-shadow: 0 8rpx 0 #059669;
}

.energy-modal-btn.rest {
  background: linear-gradient(180deg, #9ca3af, #6b7280);
  box-shadow: 0 8rpx 0 #4b5563;
}
