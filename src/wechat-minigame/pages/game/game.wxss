/* 游戏页面样式 - 与网页版保持一致 */

/* 主内容区域 - 占用剩余空间，全屏宽 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
  gap: 28rpx; /* 增加网格和单词列表之间的间距 */
  overflow: hidden;
  min-height: 0; /* 关键：让flex子元素可以缩小 */
  width: 100%;
  padding: 0 12rpx;
  box-sizing: border-box;
}

/* 主游戏卡片 - 防止网格区域被压缩 */
.game-card-main {
  padding: 28rpx 36rpx;
  background: #FFFFFF;
  border-radius: 48rpx;
  box-shadow: 0 12rpx 0 #FFB6C1;
  width: 100%;
  max-width: 100%;
  border: 6rpx solid #FFB6C1;
  box-sizing: border-box;
  flex-shrink: 0; /* 防止网格区域被压缩 */
  min-height: fit-content; /* 确保网格区域有足够高度 */
}

/* 单词列表区 - 动态高度，全屏宽，确保可以正常滚动 */
.words-section {
  width: 100%;
  max-width: 100%;
  flex: 1 1 auto; /* 允许缩小 */
  min-height: 0; /* 关键：让flex子元素可以缩小 */
  display: flex;
  flex-direction: column;
  background: #FFFFFF;
  border-radius: 36rpx;
  padding: 28rpx 36rpx;
  box-shadow: 0 8rpx 0 #FFB6C1;
  border: 4rpx solid #FFB6C1;
  overflow: hidden;
  margin-bottom: 0; /* 移除底部间距，避免与键盘区重叠 */
  box-sizing: border-box;
}

.words-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  flex: 1;
  overflow-y: auto;
  min-height: 0;
}
