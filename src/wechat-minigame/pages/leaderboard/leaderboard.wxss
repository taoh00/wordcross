/* pages/leaderboard/leaderboard.wxss */

.leaderboard-page {
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.type-tabs {
  display: flex;
  white-space: nowrap;
  margin-bottom: 24rpx;
  padding-bottom: 8rpx;
}

.type-tab {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  margin-right: 16rpx;
  border: 4rpx solid transparent;
}

.type-tab.active {
  background: linear-gradient(180deg, #a78bfa, #8b5cf6);
  border-color: #7c3aed;
  box-shadow: 0 6rpx 0 #6d28d9;
}

.tab-icon {
  font-size: 28rpx;
}

.tab-name {
  font-size: 26rpx;
  font-weight: 700;
  color: #374151;
}

.type-tab.active .tab-name {
  color: white;
}

.leaderboard-card {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
}

.loading, .empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.loading-icon, .empty-icon {
  font-size: 80rpx;
}

.loading-text, .empty-text {
  font-size: 28rpx;
  color: #6b7280;
}

.rankings-list {
  flex: 1;
  min-height: 0;
}

.rank-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: rgba(248, 250, 252, 0.7);
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  border: 4rpx solid transparent;
}

.rank-item.is-me {
  background: linear-gradient(180deg, #ede9fe, #ddd6fe);
  border-color: #a78bfa;
}

.rank-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(180deg, #f3f4f6, #e5e7eb);
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: 800;
  color: #6b7280;
}

.rank-badge.top-1 {
  background: linear-gradient(180deg, #fef3c7, #fbbf24);
  font-size: 36rpx;
}

.rank-badge.top-2 {
  background: linear-gradient(180deg, #e5e7eb, #d1d5db);
  font-size: 36rpx;
}

.rank-badge.top-3 {
  background: linear-gradient(180deg, #fed7aa, #f97316);
  font-size: 36rpx;
}

.rank-avatar {
  font-size: 40rpx;
}

.rank-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 700;
  color: #374151;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rank-score {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.score-value {
  font-size: 32rpx;
  font-weight: 900;
  color: #5b21b6;
}

.score-unit {
  font-size: 22rpx;
  color: #6b7280;
}

.my-rank-card {
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.my-rank-label {
  font-size: 28rpx;
  font-weight: 700;
  color: #374151;
}

.my-rank-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.my-rank-num {
  font-size: 36rpx;
  font-weight: 900;
  color: #5b21b6;
}

.my-rank-score {
  font-size: 26rpx;
  color: #6b7280;
}
