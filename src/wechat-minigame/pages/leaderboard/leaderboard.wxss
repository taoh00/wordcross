/* 排行榜页面样式 - 与网页版保持一致 */

/* Tab切换头部 */
.tab-header {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  gap: 32rpx;
  width: 100%;
  padding: 24rpx 0;
  margin-bottom: 24rpx; /* 增加Tab与内容区的间距 */
}

.tab-buttons {
  display: flex;
  gap: 20rpx;
  flex: 1;
  min-width: 0; /* 允许flex容器收缩 */
}

.tab-btn {
  flex: 1;
  min-width: 0; /* 关键：允许按钮收缩，防止溢出 */
  padding: 28rpx 24rpx;
  background: #FFFFFF;
  border: 4rpx solid #FFB6C1;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: rgba(255,255,255,0.9);
  white-space: nowrap;
  overflow: hidden; /* 文字溢出处理 */
  text-overflow: ellipsis; /* 文字溢出处理 */
}

.tab-btn.active {
  background: #FFFFFF;
  border-color: #5D5D5D;
  color: #FF69B4;
  box-shadow: 0 8rpx 0 #FF69B4;
}
