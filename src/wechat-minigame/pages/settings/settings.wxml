<!--pages/settings/settings.wxml-->
<view class="settings-page">
  <view class="settings-card card">
    <text class="section-title">⚙️ 游戏设置</text>
    
    <!-- 音效开关 -->
    <view class="setting-item">
      <text class="setting-label">🔊 音效</text>
      <switch checked="{{ soundEnabled }}" bindchange="toggleSound" color="#8b5cf6" />
    </view>
    
    <!-- 背景音乐开关 -->
    <view class="setting-item">
      <text class="setting-label">🎵 背景音乐</text>
      <switch checked="{{ bgMusicEnabled }}" bindchange="toggleBgMusic" color="#8b5cf6" />
    </view>
    
    <!-- 显示翻译开关 -->
    <view class="setting-item">
      <text class="setting-label">📖 显示翻译</text>
      <switch checked="{{ showTranslation }}" bindchange="toggleTranslation" color="#8b5cf6" />
    </view>
    
    <!-- 发音类型 -->
    <view class="setting-item">
      <text class="setting-label">🗣️ 发音类型</text>
      <view class="voice-options">
        <view 
          class="voice-btn {{ voiceType === 'us' ? 'active' : '' }}" 
          bindtap="setVoiceType" 
          data-type="us"
        >美音</view>
        <view 
          class="voice-btn {{ voiceType === 'uk' ? 'active' : '' }}" 
          bindtap="setVoiceType" 
          data-type="uk"
        >英音</view>
      </view>
    </view>
  </view>
  
  <view class="settings-card card">
    <text class="section-title">📊 游戏数据</text>
    
    <view class="stats-grid">
      <view class="stat-item">
        <text class="stat-value">{{ totalGames }}</text>
        <text class="stat-name">总局数</text>
      </view>
      <view class="stat-item">
        <text class="stat-value">{{ totalWords }}</text>
        <text class="stat-name">总单词</text>
      </view>
      <view class="stat-item">
        <text class="stat-value">{{ totalScore }}</text>
        <text class="stat-name">总积分</text>
      </view>
      <view class="stat-item">
        <text class="stat-value">{{ campaignLevel }}</text>
        <text class="stat-name">闯关进度</text>
      </view>
    </view>
    
    <!-- 重置数据 -->
    <view class="reset-section">
      <view class="reset-btn" bindtap="resetAllData">
        <text class="reset-icon">🔄</text>
        <text class="reset-text">重置游戏数据</text>
      </view>
    </view>
  </view>
  
  <view class="settings-card card">
    <text class="section-title">ℹ️ 关于</text>
    <view class="about-info">
      <text class="about-text">我爱填单词 v1.0.0</text>
      <text class="about-text">趣味英语学习小程序</text>
    </view>
  </view>
</view>
