/* pages/settings/settings.wxss */

.settings-page {
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
}

.settings-card {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #5b21b6;
  margin-bottom: 28rpx;
  display: block;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f3f4f6;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #374151;
}

.voice-options {
  display: flex;
  gap: 16rpx;
}

.voice-btn {
  padding: 12rpx 24rpx;
  background: #f3f4f6;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 700;
  color: #6b7280;
}

.voice-btn.active {
  background: linear-gradient(180deg, #a78bfa, #8b5cf6);
  color: white;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(180deg, #f9fafb, #f3f4f6);
  border-radius: 20rpx;
  border: 4rpx solid #e5e7eb;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 900;
  color: #5b21b6;
}

.stat-name {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 8rpx;
}

.reset-section {
  margin-top: 24rpx;
}

.reset-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 24rpx;
  background: linear-gradient(180deg, #fee2e2, #fecaca);
  border-radius: 20rpx;
  border: 4rpx solid #f87171;
}

.reset-icon {
  font-size: 32rpx;
}

.reset-text {
  font-size: 28rpx;
  font-weight: 800;
  color: #dc2626;
}

.about-info {
  text-align: center;
  padding: 24rpx;
}

.about-text {
  display: block;
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}
